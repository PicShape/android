<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gallery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.android.picshape.view.GalleryActivity">

    <!-- Profile info-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:padding="10dp">

        <TextView
            android:id="@+id/counter_friends_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 Friends"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:id="@+id/profile_pic_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/genie"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/profile_pic_imageView"
            android:text="EugÃ©nie Bouchard"/>

        <ImageView
            android:id="@+id/pic_imageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/picture"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/counter_pic_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 pictures uploaded"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/pic_imageView"
            />


        <TextView
            android:id="@+id/counter_like_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 Likes"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/heart"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/counter_like_textView"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/primary"/>

    <!-- Pictures -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">


        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/gallery_gridView"

            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:gravity="center"
            />
    </RelativeLayout>

    <!-- Activity's buttons-->
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:background="@color/primary"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/wall_btn"
            android:background="@drawable/button"
            android:onClick="launchWall"
            android:text="Wall"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/gallery_btn"
            android:background="@drawable/button"
            android:onClick="launchGallery"
            android:text="Gallery"
            android:textColor="@android:color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/convert_btn"
            android:background="@drawable/button"
            android:onClick="launchConvert"
            android:text="Convert"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
